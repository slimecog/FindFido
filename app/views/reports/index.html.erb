<!DOCTYPE html>
<html>
  <head>
    <title>Find Fido</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDnxenjTzcyUby5I4LgfYb2ENp8S5WG1aE&callback=initMap">
    </script>
  </head>

  <body>

    <!-- Navbar (sit on top) -->
    <div class="w3-top">
      <div class="w3-bar w3-white w3-wide w3-padding w3-card">
        <a href="/dashboard" class="w3-bar-item w3-button"><b>Find Fido</b></a>
        <!-- Float links to the right. Hide them on small screens -->
        <div class="w3-right">
            <p id='google-flash' class="w3-bar-item">Signed in as !</p>
            <a href='signout' class="w3-bar-item w3-button">Sign Out</a>
        </div>
      </div>
    </div>

    <!-- Page content -->
    <div class="w3-content w3-padding" style="max-width:1564px">

      <!-- Welcome Section -->
      <div class="w3-container w3-padding-32" id="welcome">
        <h3 class="w3-border-bottom w3-border-light-grey w3-padding-16">Find Fido Welcomes You</h3>
      </div>

      <div class="main-split-report">
        <!-- report entry -->
        <div class="w3-container w3-padding-32" id="about">
          <% @coordinates.each do |coordinate| %>
            lat: <%= coordinate[0] %>
            <br>
            lon: <%= coordinate[1] %>
            <br>
            <br>
          <% end %>
        </div>

        <!-- google Map -->
        <div id="map"></div>
      </div>
    <!-- End page content -->
    </div>

    <!-- Footer -->
    <div id="footer" class="w3-bar w3-black w3-wide w3-padding w3-card">
      <div class="w3-left w3-hide-small">
          <a href="#about" class="w3-bar-item w3-button">About</a>
          <a href="#help" class="w3-bar-item w3-button">Help</a>
          <a href="#contact" class="w3-bar-item w3-button">Contact</a>
      </div>
    </div>
    <!-- map setup -->
    <script>
      var coordinates = <%= @coordinates %>;
      // var descriptions = <%= @descriptions.map { |description| description } %>;

      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 15,
        center: new google.maps.LatLng(<%= @coordinates.last[0] %>, <%= @coordinates.last[1] %>),
      });

      var infowindow = new google.maps.InfoWindow();

      var marker, i;

      for (i = 0; i < coordinates.length; i++) {
        marker = new google.maps.Marker({
          position: new google.maps.LatLng(coordinates[i][0], coordinates[i][1]),
          map: map
        });

        google.maps.event.addListener(marker, 'click', (function(marker, i) {
          return function() {
            infowindow.setContent('Pet found here!');
            infowindow.open(map, marker);
          }
        })(marker, i));
      }
    </script>
  </body>
</html>
